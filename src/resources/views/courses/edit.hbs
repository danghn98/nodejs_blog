<div class="mt-4">
  <div class="container">
    <h3>Sua ban ghi</h3>
    <form method="post" action="/courses/{{course._id}}?_method=PUT">
      <div class="forn-group">
        <label class="form-check-label" for="title">Title</label>
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          value="{{course.title}}"
        />
      </div>
      <div class="forn-group">
        <label class="form-check-label" for="body">Body</label>
        <input
          type="text"
          class="form-control"
          id="body"
          name="body"
          value="{{course.body}}"
        />
      </div>
      <button type="submit" class="btn btn-primary">Sua du lieu</button>
    </form>
  </div>
</div>